pipeline {
    agent any

    stages {
        stage('Git') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/hwafa/timesheetproject.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }
stage('SonarQube Analysis') {
    steps {
        script {
            def scannerHome = tool 'atliersonar'
            
            withSonarQubeEnv('atliersonar') {
                sh """
                    ${scannerHome}/bin/sonar-scanner \
                    -Dsonar.projectKey=atliersonar \
                    -Dsonar.sources=src \         // Chemin corrig√©
                    -Dsonar.projectName=atliersonar
                """
            }
        }
    }
}
    }
}
