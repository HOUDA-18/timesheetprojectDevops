pipeline {
    agent any

    stages {
        stage('Git') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/hwafa/timesheetproject.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Verify Structure') {
            steps {
                sh """
                    echo "=== Structure des fichiers ==="
                    ls -al
                    echo "=== Contenu de timesheetproject-master ==="
                    ls -al timesheetproject-master/
                """
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'atliersonar'
                    
                    // Ex√©cution depuis la racine du workspace
                    withSonarQubeEnv('atliersonar') {
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=atliersonar \
                            -Dsonar.sources=timesheetproject-master/src \
                            -Dsonar.projectName=atliersonar
                        """
                    }
                }
            }
        }
    }
}
