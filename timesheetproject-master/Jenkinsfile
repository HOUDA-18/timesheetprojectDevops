pipeline {
    agent any

    stages {
        stage('Git') {
            steps {
                git branch: 'master',  // Suppression de l'espace en trop
                    url: 'https://github.com/hwafa/timesheetproject.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'atliersonar' // Vérifier le nom de l'outil dans Jenkins
                    withSonarQubeEnv('atliersonar') { // Vérifier que 'SonarQube' correspond au serveur configuré
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}
