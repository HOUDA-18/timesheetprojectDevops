pipeline {
    agent any

    environment {
        registry = "192.168.65.129:8083" // Ton registre Nexus
        imageName = "houdachaanbi/timesheet-devops-1.0.0"  // Nom de l'image Docker
        dockerRegistry = "http://${registry}"  // URL du registre Docker
        registryCredentials = "nexus"  // Credentials ID pour Nexus Docker Registry
    }

    stages {
        stage('Git') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/hwafa/timesheetproject.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('MVN Nexus') {
            steps {
                sh 'mvn install -Dmaven.test.skip=true'
            }
        }
        stage('Check File Structure') {
    steps {
        sh 'ls -la'
    }
}


      stage('Build Image') {
            steps {
                sh 'docker build -t houdachaanbi/timesheet-devops:1.0.0 .'
            }
        }
        stage('Deploy Image') {
            steps {
                sh 'docker push houdachaanbi/timesheet-devops:1.0.0'
            }
        }
    }
}
